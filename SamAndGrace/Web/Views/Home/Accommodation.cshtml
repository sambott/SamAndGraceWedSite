@using Web.Models
@{
    ViewBag.Title = "Nearby Accommodation";
}
<h2>@ViewBag.Title</h2>

<p>
    <a class="btn btn-primary btn-sm" href="#hotels">Hotels</a>
    <a class="btn btn-primary btn-sm" href="#bandbs">B & Bs</a>
</p>


<div class="row">

    <a id="hotels"></a>
    <h3>Hotels</h3>
    <p><a class="btn btn-default btn-xs" href="#top">top</a></p>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Distance</th>
                <th>Stars</th>
                <th>Number Of Rooms</th>
                <th>Web</th>
                <th>Phone Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Hotel hotel in ViewBag.Hotels)
            {
                <tr>
                    <td>@hotel.Name</td>
                    <td>@hotel.Location</td>
                    <td>@hotel.DriveDistanceMinutes minutes' drive</td>
                    <td>
                        @if (hotel.StarRating == null)
                        {
                            @:&nbsp;
                        }
                        else
                        {
                            <span class="badge">
                                @for (int i = 0; i < hotel.StarRating; i++)
                                {
                                    @:*
                                }
                            </span>
                        }
                    </td>
                    <td>@hotel.NumberOfRooms</td>
                    <td>
                        @if (hotel.Url == null)
                        {
                            @:&nbsp;
                        }
                        else
                        {
                            <a class="alert-link" href="@hotel.Url.Value" target="_blank">@hotel.Url.Value</a>
                        }
                    </td>
                    <td>@hotel.PhoneNumber</td>
                </tr>
            }
        </tbody>
    </table>
    
    <a id="bandbs"></a>
    <h3>Bed and Breakfasts</h3>
    <p><a class="btn btn-default btn-xs"href="#top">top</a></p>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Distance</th>
                <th>Stars</th>
                <th>Web</th>
                <th>Phone Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (BAndB bAndB in ViewBag.BAndBs)
            {
                <tr>
                    <td>@bAndB.Name</td>
                    <td>@bAndB.Location</td>
                    <td>@bAndB.DriveDistanceMinutes minutes' drive</td>
                    <td>
                        @if (bAndB.StarRating == null)
                        {
                            @:&nbsp;
                        }
                        else
                        {
                            <span class="badge">
                                @for (int i = 0; i < bAndB.StarRating; i++)
                                {
                                    @:*
                                }
                            </span>
                        }
                    </td>
                    <td>
                        @if (bAndB.Url == null)
                        {
                            @:&nbsp;
                        }
                        else
                        {
                            <a class="alert-link" href="@bAndB.Url.Value" target="_blank">@bAndB.Url.Value</a>
                        }
                    </td>
                    <td>@bAndB.PhoneNumber</td>
                </tr>
            }
        </tbody>
    </table>
</div>
